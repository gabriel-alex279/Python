
#Alistamento Militar

print('-'*30)
ano_nasc = int(input('Em que ano você nasceu? '))
print(' ')
ano_atual = 2025

ano_milit = ano_atual - ano_nasc

ano_diferen1 = ano_milit - 18

ano_diferen2 = 18 - ano_milit

if ano_milit == 18:
  print(f'Já está na hora de você se alistar!')
if ano_milit > 18:
  print(f'Já era para você ter se alistado a {ano_diferen1} anos atrás.')
if ano_milit < 18:
  print(f'Você ainda não precisa se alistar! Somente daqui a {ano_diferen2} anos.')
  print(' ')
  print('-'*30)
