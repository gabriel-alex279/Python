# RADAR ELETRÔNICO

from time import sleep

print('-' * 20)

print(' ')

print('Olá bom dia. Como vai você?')
sleep(1)

print(' ')

velocidade = float(input('Qual é a velocidade atual do carro? KM'))

print(' ')
multa = (velocidade - 80) * 7
if velocidade > 80:
  print(f'MULTADO! Você excedeu o limite que é de 80Km/h. Sua multa será de {multa}.')
else:
    print('Muito bem! Tenha um bom dia e dirija com segurança!')

print(' ')

print('-' * 20)
